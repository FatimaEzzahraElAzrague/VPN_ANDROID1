[Unit]
Description=VPN Speed Test FastAPI Backend
After=network.target

[Service]
Type=exec
User=ubuntu
WorkingDirectory=/home/ubuntu/speedtest-backend
Environment=PATH=/home/ubuntu/speedtest-backend/venv/bin
ExecStart=/home/ubuntu/speedtest-backend/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
